# Neo4j Database Credentials
# Used by docker-compose.yml to initialize the database
# and by the application to connect to it.
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_URI=bolt://localhost:7687

# Azure OpenAI Credentials (if using Azure provider)
# These are read automatically by the LangChain AzureChatOpenAI client
AZURE_OPENAI_API_KEY="your_azure_api_key"
AZURE_OPENAI_ENDPOINT="your_azure_endpoint"
OPENAI_API_VERSION="2024-02-01"
